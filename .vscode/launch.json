    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run independent-tests",
            "name": "Run tests independent of main project",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Python: csv_to_json test",
            "type": "python",
            "request": "launch",
            "program": "scripts/csv_to_json.py",
            "args": [
                "scripts/data/ReAct_Beirut_Craft_Workshops_and_Craftspeople - Stickers_Stories.csv",
                "stickers"                                                                                                                                                 
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "command": "npm run dev",
            "name": "Debug in development mode",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}